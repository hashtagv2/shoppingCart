<section>
    <div class="row">
        <div class="col-md-6 col-lg-4 m-auto">
            <div class="container mt-5 pl-5">
                <h2 class="text-center font-weight-bolder">Login</h2>
                {{#if loginErr}}
                <p class="text-danger text-center error"><svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
</svg>{{loginErr}}</p>
                {{/if}}
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label >Email address</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter email">
                        
                    </div>
                    <div class="form-group">
                        <label >Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Password">
                    </div>
                    <a href="/signup">Create new account?</a>

                    <button type="submit" class="btn btn-primary float-right">Submit</button>
                </form>
            </div>
        </div>

    </div>
</section>