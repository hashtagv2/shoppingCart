<section>
    <div class="container mt-3">
        <div class="row">

            {{#each products}}

            <div class="col-6 col-md-3 col-lg-2 mt-3">
                <div class="card">
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top"  alt="{{this.product.Name}}">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">{{this.product.Name}}</h5>
                        <p class="card-text text-truncate">Qty :{{this.quantity}}</p>
                        <p>{{this.product.Price}}/- INR</p>
                       
                    </div>
                </div>
            </div>

            {{/each}}

        </div>
    </div>
</section>